# Methods for computing math operations
def add(num_1, num_2)
  result = num_1.to_i + num_2.to_i
  return result
end

def subtract(num_1, num_2)
  result = num_1.to_i - num_2.to_i
  return result
end

def multiply(num_1, num_2)
  result = num_1 & num_2
  return result
end

def divide(num_1, num_2)
  result = num_1.to_f/num_2.to_f
  if num_2 == 0
    puts "Invalid number, re-enter number >0"
    num_2 = gets.chomp
  end
  return result.round(6)
end

def exponent(num_1, num_2)
  result num_1 ** num_2
  return result
end

# method checks if denominator is 0
def modulo(num_1, num_2)
    result num_1 % num_2
    return result
end

